[Unit]
Description=AvTLSSrv (HAProxy Load Balancer)
#Documentation=man:haproxy(1)
#Documentation=file:/usr/share/doc/haproxy/configuration.txt.gz
After=network.target rsyslog.service

[Service]
#EnvironmentFile=-/etc/default/haproxy
#EnvironmentFile=-/etc/sysconfig/haproxy
#EnvironmentFile=/opt/AvTLSSrv/conf/appendix

Environment=CONFIG=/opt/haproxy/haproxy.cfg
# Add extra flags here, see haproxy(1) for a few options
#Environment=EXTRAOPTS="-de -m 16"

Environment=AVOPENSSL_HOME=/opt/AvTLSSrv
Environment=LD_LIBRARY_PATH=/opt/AvTLSSrv/lib:/opt/AvTLSSrv/lib64
Environment=AVCSP_NOT_USE_EMS=YES
#Environment=RNG_PASSPHRASE=12345678
#Environment=SSL_PASSPHRASE=12345678

Environment="PIDFILE=/opt/haproxy/run/haproxy.pid" "EXTRAOPTS=-S /opt/haproxy/run/haproxy-master.sock"

ExecStartPre=/opt/haproxy/sbin/haproxy -f $CONFIG -c -q $EXTRAOPTS
ExecStart=/opt/haproxy/sbin/haproxy -Ws -f $CONFIG -p $PIDFILE $EXTRAOPTS
ExecReload=/opt/haproxy/sbin/haproxy -f $CONFIG -c -q $EXTRAOPTS
ExecReload=/bin/kill -USR2 $MAINPID
KillMode=mixed
Restart=always
SuccessExitStatus=143
Type=notify

